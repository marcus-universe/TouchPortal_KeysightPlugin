{
  "sdk": 1,
  "version": 1,
  "name": "Keysight",
  "id": "keysight",
  "configuration": {
    "colorDark": "#029e84",
    "colorLight": "#7b00d4",
    "parentCategory": "misc"
  },
  "categories": [{
    "id": "keysightmessages",
    "name": "Keysight",
    "actions": [

      {
        "id": "send_keysight_command",
        "prefix": "Send a command to Keysight",
        "name": "Send command to Keysight",
        "type": "communicate",
        "tryInline": true,
        "format": "Send {$message$} to Keysight ",
        "data": [{
          "id": "message",
          "name": "message",
          "label": "Message",
          "type": "text",
          "default": "switch1",
          "description": "The message to send to Keysight",
          "required": true
        }]
      }
    ]
  }],
  "settings": [{
      "name": "Set Websockets IP",
      "default": "127.0.0.1",
      "type": "text",
      "maxLenght": 16,
      "isPassword": false,
      "minValue": 0,
      "maxValue": 120,
      "readOnly": false
    },
    {
      "name": "Set Websockets Port",
      "default": "3000",
      "type": "text",
      "maxLenght": 16,
      "isPassword": false,
      "minValue": 0,
      "maxValue": 120,
      "readOnly": false
    }


  ],
  "plugin_start_cmd": "%TP_PLUGIN_FOLDER%TouchPortalKeysight\\touchportal_keysightplugin.exe"
}