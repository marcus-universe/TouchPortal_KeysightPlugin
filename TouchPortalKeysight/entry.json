{
  "sdk": 1,
  "version": 2,
  "name": "keysight",
  "id": "keysight",
  "configuration": {
    "colorDark": "#029e84",
    "colorLight": "#7b00d4",
    "parentCategory": "misc"
  },
  "categories": [{
    "id": "keysightmessages",
    "name": "Keysight",
    "imagepath": "%TP_PLUGIN_FOLDER%TouchPortalKeysight\\img\\keysight_logo.png",
    "actions": [

      {
        "id": "send_keysight_command",
        "prefix": "Send a command to Keysight",
        "name": "Send command to Keysight",
        "type": "communicate",
        "tryInline": true,
        "format": "Send {$message$} to Keysight ",
        "data": [{
          "id": "message",
          "name": "message",
          "label": "Message",
          "type": "text",
          "default": "switch1",
          "description": "The message to send to Keysight",
          "required": true
        }]
      },
      {
        "id": "restart_keysight_server",
        "prefix": "restarts the Keysight server",
        "name": "Restart_Keysight_Server",
        "type": "communicate",
        "tryInline": true,
        "format": "Keysight server restarted"
      }

    ]
  }],
  "settings": [{
      "name": "Port",
      "default": "3000",
      "type": "text",
      "maxLenght": 16,
      "isPassword": false,
      "minValue": 0,
      "maxValue": 120,
      "readOnly": false
    }


  ],
  "plugin_start_cmd": "%TP_PLUGIN_FOLDER%TouchPortalKeysight\\touchportal_keysightplugin.exe"
}